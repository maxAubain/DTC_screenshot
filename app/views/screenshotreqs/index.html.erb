<div class="sub-title">
  Capture and store website screenshots
</div>

<div class="button-container index">
  <div class="button index">
    <%= link_to 'New Request', new_screenshotreq_path, class: "button-text" %>
  </div>

  <div class="dropdown">
    <button class="button-text">Storage</button>
    <div class="dropdown-content">
      <% @screenshotreqs.each do |screenshotreq| %>
        <%= link_to screenshotreq.name, screenshotreq_path(screenshotreq) %> &nbsp; 
      <% end %>
    </div>
  </div> 
</div>